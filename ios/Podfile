# Uncomment to define a global platform for your project
platform :ios, '11.0'

# Disable CocoaPods stats to speed up CI builds
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

def flutter_root
  generated_xcconfig = File.expand_path("../Flutter/Generated.xcconfig", __FILE__)
  unless File.exist?(generated_xcconfig)
    raise "#{generated_xcconfig} must exist. Run `flutter pub get` first."
  end
  File.foreach(generated_xcconfig) do |line|
    if line =~ /FLUTTER_ROOT\=(.*)/
      return $1.strip
    end
  end
  raise "FLUTTER_ROOT not found in #{generated_xcconfig}. Try deleting it and running `flutter pub get`."
end

# Load the Flutter CocoaPods helper from the Flutter SDK
require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')), __FILE__

# Run Flutter-specific Podfile setup
flutter_ios_podfile_setup

# Prevent CocoaPods 1.13+ from messing up Flutter's build paths
install! 'cocoapods', :disable_input_output_paths => true

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # This pulls in all the plugin pods automatically
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Force every Pod to your minimum iOS version
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
    end
  end
end
